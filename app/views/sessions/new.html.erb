<h3>Log in</h3>
<div class="row">
    <div class="col-sm-4">
        <%= form_for(:session, url: login_path) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email, class:"form-control" %>

            <%= f.label :password %>
            <%= f.password_field :password, class:"form-control" %>

            <%= f.submit "Log in", class:"btn btn-primary form-button" %>
        <% end %>
    </div>
</div>
